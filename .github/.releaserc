{
  "branches": [
    "master"
  ],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "merge",
            "release": false
          },
          {
            "type": "docs",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          }
        ],
        "parserOpts": {
          "mergePattern": "^Merge pull request #([0-9]+) from .+$",
          "mergeCorrespondence": [
            "id",
            "source"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "writerOpts": {
          "headerPartial": ""
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "make setup && make build VERSION=${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failComment": false,
        "labels": [
          "release"
        ],
        "releasedLabels": [
          "released"
        ],
        "assets": [
          {
            "path": "dist/**/*.zip"
          },
          {
            "path": "dist/**/*.tar.gz"
          },
          {
            "path": "dist/**/*.tgz"
          },
          {
            "path": "dist/**/*.deb"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
